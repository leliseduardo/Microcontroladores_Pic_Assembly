                      00132 ; --- Como calcular o tempo do semiciclo ativo ---
                      00133 ;
                      00134 ;       Semiciclo Ativo = (CCPR1L:CCP1CON<5:4>) * ciclo de oscilação * prescaler
                      00135 ;
                      00136 ;       Deseja-se um semiciclo ativo de 45% do período
                      00137 ;
                      00138 ;       Período = 800ms
                      00139 ;       Semiciclo = 800ms * 0,45 = 360us
                      00140 ;
                      00141 ;       Semiciclo Ativo = (CCPR1L:CCP1CON<5:4>) * ciclo de oscilação * prescaler
                      00142 ;
                      00143 ;                                                                         Semiciclo Ativo
                      00144 ;       (CCPR1L:CCP1CON<5:4>) = ---------------------------------------------
                      00145 ;                                                                  ciclo de oscilação * prescaler
                      00146 ;
                      00147 ;                                                          360us                        
                      00148 ;       (CCPR1L:CCP1CON<5:4>) = ------------
                      00149 ;                                                        250ns * 16
                      00150 ;
                      00151 ;   (CCPR1L:CCP1CON<5:4>) = 90
                      00152 ;
                      00153 ;       Logo, a contegem do contador do módulo CCP deve começar em 90, para um semiciclo ativo do PWM em
                             45%
                      00154 ;
                      00155 ;       90d = 0001011010b
                      00156 ;
                      00157 ;               CCPR1L                  CCP1CON,5               CCP1CON,4       
                      00158 ;          00010110b                    1b                              0b
                      00159 ;                       
